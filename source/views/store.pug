block body
  article.store-page
    h1 Store
    hr
    form#dataForm.row.g-3.needs-validation(novalidate='')
      .wrapper.c-2
        .content
          h3 general
          .form-row
            .col-md-12
              label.form-label(for='general_title') 標題
              input#general_title.form-control.form-bind-data(type='text' name="general_title" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
        .content
          h3 form
          .form-row
            .col-md-12
              label.form-label(for='form_title') 標題
              input#form_title.form-control.form-bind-data(type='text' name="form_title" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='form_subtitle') 子標題
              input#form_subtitle.form-control.form-bind-data(type='text' name="form_subtitle" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
        .content
          h3 why
          .form-row
            .col-md-12
              label.form-label(for='why_title') 標題
              input#why_title.form-control.form-bind-data(type='text' name="why_title" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='why_description') 描述
              input#why_description.form-control.form-bind-data(type='text' name="why_description" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='why_img') 圖片
              input.form-control(type='file' value='' imgClass="why_img")
              input#why_img.form-control.form-bind-data(type='hidden' name="why_img" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
              img.file-img.why_img(src="")
        .content
          h3 partner
          .form-row
            .col-md-12
              label.form-label(for='partner_title') 標題
              input#partner_title.form-control.form-bind-data(type='text' name="partner_title" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .items-title partner_items
            .items-box#partner_items(data-itemKey="partner_items")
              .items
                .col-md-12
                  label.form-label 標題
                  input.form-control.form-bind-items-data(type='text' name="partner_item_title" value='' required='')
                  .valid-feedback
                    | OK!
                  .invalid-feedback
                    | 不得為空
                .col-md-12
                  label.form-label 子標題
                  input.form-control.form-bind-items-data(type='text' name="partner_item_subtitle" value='' required='')
                  .valid-feedback
                    | OK!
                  .invalid-feedback
                    | 不得為空
                .col-md-12
                  label.form-label 圖片
                  input.form-control(type='file' value='' imgClass="partner_item_img")
                  input.form-control.form-bind-items-data(type='hidden' name="partner_item_img" value='' required='')
                  img.file-img.partner_item_img(src="")
                  .valid-feedback
                    | OK!
                  .invalid-feedback
                    | 不得為空
            .btn-add.btn.btn-sm.btn-primary(data-copy="partner_items") 新增
      .page-data(data-apiUrl="/api/v1/store" data-nextTo="store.html" data-isMainPage="1")
      .btn-box
        button.submit.btn.btn-primary(type='submit') Submit
        button.draft.btn.btn-primary(type='submit') preview


