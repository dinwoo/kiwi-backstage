extend ../Layout.pug

block pageCSS
  //- link(href="./css/index.css", rel="stylesheet")

block pageJs
  script(src="./js/form.js")
  
block pageType
  - var page = 'feedback'
  
//- block head
//-   include ../components/Header.pug

//- block footer
//-   include ../components/Footer.pug

block body
  article.feedback-detail-form-page
    h1 feedbackDetail
    hr
    form#dataForm.row.g-3.needs-validation(novalidate='' method="" action="")
      .wrapper
        //- h3 meta
        .content
          .form-row
            .col-md-12
              label.form-label(for='isEnable') 是否啟用
              select#isEnable.form-select(name="isEnable" required='')
                option(value=1) 啟用
                option(value=0) 不啟用
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='name') 姓名
              input#name.form-control.form-bind-data(type='text' name="name" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='personaType') 性質
              input#personaType.form-control.form-bind-data(type='text' name="personaType" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='rating') 評分分數
              input#rating.form-control.form-bind-data(type='number' name="rating" step="0.5" min="0.5" max="5" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='text') 敘述
              textarea#text.form-control.form-bind-data(type='text' name="text" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='avatar') 照片
              input.form-control(type='file' value='' imgClass="avatar" required)
              input#avatar.form-control.form-bind-data(type='hidden' name="avatar" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
              img.file-img.avatar(src="")
      .page-data(data-apiUrl="/api/v1/index/feedback/detail" data-nextTo="feedbackDetail.html")
      input.form-control.form-bind-data(type='hidden' name="id" value='' required='')
      button.btn.btn-primary(type='submit') Submit form





