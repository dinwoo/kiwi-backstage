extend ../Layout.pug

block pageCSS
  //- link(href="./css/index.css", rel="stylesheet")

block pageJs
  script(src="./js/form.js")
  
block pageType
  - var page = 'promo'
  
//- block head
//-   include ../components/Header.pug

//- block footer
//-   include ../components/Footer.pug

block body
  article.promo-option-detail-form-page
    h1 PromoOptionDetail
    hr
    form#dataForm.row.g-3.needs-validation(novalidate='')
      .wrapper
        //- h3 meta
        .content
          .form-row
            .col-md-12
              label.form-label(for='isEnable') 是否啟用
              select#isEnable.form-select(name="isEnable" required='')
                option(value=1) 啟用
                option(value=0) 不啟用
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='url') 網址
              input#url.form-control.form-bind-data(type='text' name="url" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='text') 內容
              input#text.form-control.form-bind-data(type='text' name="text" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='value') 值
              input#value.form-control.form-bind-data(type='text' name="value" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
      .page-data(data-apiUrl="/api/v1/index/promooption/detail" data-nextTo="promoOptionDetail.html")
      input.form-control.form-bind-data(type='hidden' name="id" value='' required='')
      button.btn.btn-primary(type='submit') Submit form





