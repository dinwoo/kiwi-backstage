block body
  article.source-detail-form-page
    h1 SourceDetail
    hr
    form#dataForm.row.g-3.needs-validation(novalidate='' method="post" action="sourceDetail")
      .wrapper
        //- h3 meta
        .content
          .form-row
            .col-md-12
              label.form-label(for='description') 描述
              input#description.form-control(type='text' name="description" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='location') 地點
              input#location.form-control(type='text' name="location" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='name') 名稱
              input#name.form-control(type='text' name="name" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
          .form-row
            .col-md-12
              label.form-label(for='img') 照片
              input.form-control(type='file' value='' imgClass="img")
              input#img.form-control(type='hidden' name="img" value='' required='')
              .valid-feedback
                | OK!
              .invalid-feedback
                | 不得為空
              img.file-img.img(src="")
      button.btn.btn-primary(type='submit') Submit form





