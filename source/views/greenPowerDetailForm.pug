extend ../Layout.pug

block pageCSS
  //- link(href="./css/index.css", rel="stylesheet")

block pageJs
  script(src="./js/getSimilarList.js")
  script(src="./js/form.js")
  
block pageType
  - var page = 'greenPowerDetail'
  
//- block head
